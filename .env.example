# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_KEYPAIR=~/.config/solana/id.json  # Path to your Solana keypair file

# DEX API Keys (if required)
# JUPITER_API_KEY=your_jupiter_api_key_here
# RAYDIUM_API_KEY=your_raydium_api_key_here
# PHOTON_API_KEY=your_photon_api_key_here

# Trading Configuration
DEFAULT_SLIPPAGE_BPS=50  # 0.5% slippage
MAX_POSITION_SIZE=0.1    # 10% of portfolio per trade

# Logging
RUST_LOG=info            # debug, info, warn, error
RUST_BACKTRACE=1         # Enable backtraces for debugging

# Database configuration (TimescaleDB + Redis + ClickHouse)
PG_URL=postgres://postgres:postgres@localhost:5432/postgres
REDIS_URL=redis://127.0.0.1/
CH_URL=tcp://127.0.0.1:9000

# Optional: Notification settings
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id
# DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Optional: Rate limiting (requests per minute)
# JUPITER_RATE_LIMIT=30
# RAYDIUM_RATE_LIMIT=20
# PHOTON_RATE_LIMIT=15
